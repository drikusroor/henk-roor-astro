---
const navItems = [
    {
        name: "Administratiekantoor Henk Roor",
        url: "/",
    },
    {
        name: "Over ons",
        url: "/over-ons",
    },
    {
        name: "FinanciÃ«le administratie",
        url: "/financiele-administratie",
    },
    {
        name: "Salarisadministratie",
        url: "/salarisadministratie",
    },
    {
        name: "Startende ondernemers",
        url: "/startende-ondernemers",
    },
    {
        name: "Netwerken",
        url: "/netwerken",
    },
];
---

<header class="bg-navy-blue">
    <nav class="bg-white border-gray-200 dark:bg-gray-900">
        <div
            class="max-w-screen-xl flex flex-wrap items-center justify-between md:justify-start mx-auto p-4"
        >
            <a
                href="/"
                class="flex items-center space-x-3 rtl:space-x-reverse bg-sand-gold rounded-3xl"
            >
                <img
                    src="/images/logo.jpg"
                    class="w-12 h-12 rounded-full object-cover p-2"
                    alt="Administratiekantoor Henk Roor Logo"
                />
                <span
                    class="self-center text-2xl text-navy-blue font-semibold whitespace-nowrap dark:text-white pr-3"
                >
                    Administratiekantoor Henk Roor</span
                >
            </a>

            <label
                data-collapse-toggle="navbar-default"
                class="inline-flex items-center p-2 w-10 h-10 justify-center text-sm text-gray-500 rounded-lg md:hidden hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-gray-200 dark:text-gray-400 dark:hover:bg-gray-700 dark:focus:ring-gray-600 cursor-pointer"
                aria-controls="navbar-default"
                aria-expanded="false"
                for="navbar-toggle"
            >
                <span class="sr-only">Open main menu</span>
                <svg
                    class="w-5 h-5"
                    aria-hidden="true"
                    xmlns="http://www.w3.org/2000/svg"
                    fill="none"
                    viewBox="0 0 17 14"
                >
                    <path
                        stroke="currentColor"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M1 1h15M1 7h15M1 13h15"></path>
                </svg>
            </label>

            <input type="checkbox" id="navbar-toggle" class="hidden peer" />

            <div
                class="hidden w-full md:block md:w-auto peer-checked:block md:ml-auto md:mt-3"
                id="navbar-default"
            >
                <ul
                    class="font-medium flex flex-col p-4 md:p-0 mt-4 border border-gray-100 rounded-lg bg-gray-50 md:flex-row md:space-x-8 rtl:space-x-reverse md:mt-0 md:border-0 md:bg-white dark:bg-gray-800 md:dark:bg-gray-900 dark:border-gray-700"
                >
                    {
                        navItems.map((item) => (
                            <li>
                                <a
                                    href={item.url}
                                    class="block py-2 px-3 text-gray-900 rounded hover:bg-gray-100 md:hover:bg-transparent md:border-0 md:hover:text-navy-blue md:p-0 dark:text-white md:dark:hover:text-navy-blue dark:hover:bg-gray-700 dark:hover:text-white md:dark:hover:bg-transparent"
                                >
                                    {item.name}
                                </a>
                            </li>
                        ))
                    }
                </ul>
            </div>
        </div>
    </nav>
</header>
